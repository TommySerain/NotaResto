{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <section class="container">
        <h1>DÃ©tails du Restaurant</h1>
        <div class="row w-50 mx-auto border border-2 border-black rounded-3">
            <div class="d-flex col-12 justify-content-center border-bottom border-1 border-black">
                <p>Ici les images du restaurant</p>
                {# <img> #}
            </div>
            <div class="d-flex col-12 justify-content-center">
                <h3> {{ restaurant.name }}</h3>
            </div>
            <div class="col-12">
                <h3>Description : </h3>
                <p>{{ restaurant.description }}</p>
            </div>
            <div class="col-12">
                <h3>Adresse : </h3>
                <p>{{ restaurant.address }}</p>
            </div>
            <div class="col-12">
                <h3>Reviews</h3>
                {% for review in restaurant.reviews %}
                <div class="d-flex col-12">
                    <h4 class="me-5">{{ review.rate }}</h4>
                    <p>{{ review.comment }}</p>
                </div>
                {% endfor %}
            </div>
            </tbody>
        </div>

        <h3>Ajouter une review : </h3>
        {{ include('review/_new_form.html.twig') }}
        <a href="{{ path('app_restaurant_all') }}">back to list</a>
    </section>
{% endblock %}
