{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <h1>Restaurant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ restaurant.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ restaurant.description }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ restaurant.address }}</td>
            </tr>

            <tr>
                <th>reviews</th>
                <td></td>
                {% for review in restaurant.reviews %}
                <tr>
                    <th>{{ review.rate }}</th>
                    <td>{{ review.comment }}</td>
                </tr>
                {% endfor %}
            </tr>

        </tbody>
    </table>
    {% if 'ROLE_ADMIN' in app.user.roles %}
        <a href="{{ path('app_restaurant_index') }}">back to list</a>
    {% else %}
        <a href="{{ path('app_my_restaurants', {'id': app.user.id}) }}">back to list</a>

    {% endif %}

    <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}">edit</a>

    {{ include('restaurant/_delete_form.html.twig') }}
{% endblock %}
