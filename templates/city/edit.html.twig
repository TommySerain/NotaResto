{% extends 'base.html.twig' %}

{% block title %}Hello CityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <h1>Editer une ville</h1>

    <form method="POST">
        {{form_start(formEdit)}}
        {{form_errors(formEdit)}}
        <div class= "form-group">
            {{form_label(formEdit.name)}}
            {{form_widget(formEdit.name)}}
        </div>
        <div class= "form-group">
            {{form_label(formEdit.zipCode)}}
            {{form_widget(formEdit.zipCode)}}
        </div>
        <div class= "form-group">
            {{ form_row(formEdit.submit) }}
        </div>
        {{form_end(formEdit)}}
    </form>
</div>
{% endblock %}
